{
	"name": "local-components",
	"version": "1.0.2",
	"description": "",
	"main": "dist/index.js",
	"jsnext:main": "src/index.js",
	"author": "",
	"license": "MIT",
	"jest": {
		"setupTestFrameworkScriptFile": "<rootDir>/src/setupTests.js"
	},
	"dependencies": {
		"babel-plugin-react-css-modules": "^3.4.2",
		"classnames": "^2.2.6",
		"css-loader": "^1.0.0",
		"mini-css-extract-plugin": "^0.4.2",
		"postcss-loader": "^3.0.0",
		"postcss-sass": "^0.3.3",
		"postcss-scss": "^2.0.0",
		"react-modal": "^3.5.1",
		"sass-loader": "^7.1.0"
	},
	"scripts": {
		"start": "run-p 'sass:watch' 'js:watch' 'styleguide'",
		"test": "jest",
		"styleguide": "styleguidist server",
		"js:build": "babel src --source-maps --ignore setupTests.js,test.js --out-dir dist",
		"js:watch": "yarn js:build --watch",
		"sass:build": "node-sass --source-map true ./styles/main.sass ./style.css",
		"sass:watch": "run-p 'sass:build --watch' 'sass:livereload'",
		"sass:livereload": "livereload style.css",
		"postinstall": "npm run js:build && npm run sass:build",
		"gh-pages:build": "styleguidist build",
		"gh-pages:deploy": "yarn sass:build && shx cp style.* styleguide && shx cp -R svg styleguide && styleguidist build && gh-pages -d styleguide"
	},
	"peerDependencies": {
		"react": ">= 16.4.0",
		"react-dom": ">= 16.4.0",
		"react-router": ">= 3.2.0 < 4"
	},
	"devDependencies": {
		"babel-cli": "^6.26.0",
		"babel-core": "^6.26.3",
		"babel-loader": "^7.1.5",
		"babel-plugin-inline-react-svg": "^0.5.4",
		"babel-preset-env": "^1.7.0",
		"babel-preset-react": "^6.24.1",
		"babel-preset-stage-2": "^6.24.1",
		"enzyme": "^3.5.0",
		"enzyme-adapter-react-16": "^1.3.1",
		"gh-pages": "^1.2.0",
		"jest": "^23.5.0",
		"livereload": "^0.7.0",
		"node-sass": "^4.9.3",
		"npm-run-all": "^4.1.3",
		"react": "^16.4.2",
		"react-dom": "^16.4.2",
		"react-router": "^3.2.0",
		"react-shadow": "^16.3.0",
		"react-styleguidist": "7.3.0",
		"shx": "^0.3.2",
		"webpack": "^4.17.1"
	}
}
