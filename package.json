		"style-loader": "^0.23.0",
		"url-loader": "^1.1.1",
		"webpack": "^4.17.1",
		"webpack-cli": "^3.1.0",
		"webpack-dev-server": "^3.1.8",
		"webpack-merge": "^4.1.4",
		"webpack-node-externals": "^1.7.2",
		"write-file-webpack-plugin": "^4.4.0"
	}
