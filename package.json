	"license": "MIT",
	"jest": {
		"setupTestFrameworkScriptFile": "<rootDir>/src/setupTests.js",
		"moduleNameMapper": {
			"\\.(css|scss|sass)$": "identity-obj-proxy"
		}
	},
	"dependencies": {
		"classnames": "^2.2.6",
		"highlight.js": "^9.13.1",
		"prop-types": "^15.6.2",
		"react-hot-loader": "^4.3.6",
