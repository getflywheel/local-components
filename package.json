		"enzyme-adapter-react-16": "^1.3.1",
		"extract-css-chunks-webpack-plugin": "^3.2.1",
		"gh-pages": "^1.2.0",
		"globby": "^8.0.1",
		"identity-obj-proxy": "^3.0.0",
		"ignore-styles": "^5.0.1",
		"jest": "^23.5.0",
		"mock-require": "^3.0.2",
		"node-sass": "^4.10.0",
		"npm-run-all": "^4.1.3",
		"postcss-cli": "^6.0.1",
